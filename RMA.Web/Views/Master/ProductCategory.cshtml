@model EZY.RMAS.Contract.ProductCategoryMaster

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@ViewBag.Title</h4>
        </div>
        <div class="modal-body" id="ProductCategoryModalBody">
            <div class="row">
                <div class="col-md-3">
                    <label class="control-label pull-left">Category Group</label>
                </div>
                <div class="col-md-4">
                    @Html.DropDownListFor(x => x.CategoryGroup,
        new SelectList(ViewBag.ProductCategoryList, "Value", "Text"),
        "Select Product Category",
        new { @class = "form-control input-sm" })
            </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label class="control-label pull-left">Category Code</label>
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(x => x.Code,
                    new { @class = "form-control input-sm", placeholder = "Lookup Code" })
                    </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-2">
                            <label class="control-label pull-left">Description</label>
                        </div>
                        <div class="col-md-8">
                            @Html.TextAreaFor(x => x.Description,
         new { @class = "form-control input-sm", placeholder = "Description" })
                        </div>
                        @Html.HiddenFor(x => x.ProductCategory)
                    </div>
                </div>
        <div class="modal-footer">
            <button type="button" onclick="SaveProductCategory()" class="btn btn-danger btn-frmt green btn-sm">
                <i class="fa fa-floppy-o"></i>&nbsp;Save
            </button>
            <button type="reset" class="btn btn-default btn-frmt btn-sm" data-dismiss="modal">
                <i class="fa fa-times"></i>Cancel
            </button>
        </div>
    </div>
</div>


