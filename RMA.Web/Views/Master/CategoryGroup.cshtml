@model EZY.RMAS.Contract.Lookup

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@ViewBag.Title</h4>
        </div>
        <div class="modal-body" id="ProductCategoryModalBody">
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label pull-left">Product Code</label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.LookupCode,
                    new { @class = "form-control input-sm", placeholder = "Lookup Code" })
                </div>
            </div>
            <div class="row" style="margin-top:10px;">
                <div class="col-md-2">
                    <label class="control-label pull-left">Description</label>
                </div>
                <div class="col-md-8">
                    @Html.TextAreaFor(x => x.LookupDescription,
                    new { @class = "form-control input-sm", placeholder = "Description" })
                </div>
                @Html.HiddenFor(x => x.LookupID)
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" onclick="SaveCategoryGroup()" class="btn btn-danger btn-frmt green btn-sm">
                <i class="fa fa-floppy-o"></i>&nbsp;Save
            </button>
            <button type="reset" class="btn btn-default btn-frmt btn-sm" data-dismiss="modal">
                <i class="fa fa-times"></i>Cancel
            </button>
        </div>
    </div>
</div>