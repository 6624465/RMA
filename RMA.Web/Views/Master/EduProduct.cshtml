@model EZY.RMAS.Contract.EduProduct

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@ViewBag.Title</h4>
        </div>
        <div class="modal-body" id="ProductCategoryModalBody">
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.IsActive)
            <div class="row" style="margin-top:10px;">
                <div class="col-md-3">
                    <label class="control-label pull-right">Product Name</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.ProductName,
                    new { @class = "form-control input-sm", placeholder = "Product Name" })
                </div>
            </div>
            @*<br />
            <div class="row">
                <div class="col-md-3">
                    <label class="control-label pull-right">Product Description</label>
                </div>
                <div class="col-md-8">
                    @Html.TextAreaFor(x => x.ProductDescription,
                    new { @class = "form-control input-sm", placeholder = "Product Description" })
                </div>
            </div>*@
        </div>
        <div class="modal-footer">
            <button type="button" onclick="SaveEduProduct()" class="btn btn-danger btn-frmt green btn-sm">
                <i class="fa fa-floppy-o"></i>&nbsp;Save
            </button>
            <button type="reset" class="btn btn-default btn-frmt btn-sm" data-dismiss="modal">
                <i class="fa fa-times"></i>Cancel
            </button>
        </div>
    </div>
</div>
