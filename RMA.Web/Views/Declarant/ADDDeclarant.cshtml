        {
            @class = "btn btn-danger btn-frmt green btn-sm",
            onclick = "SaveDeclarant()"
        }, SECURABLE.TRANSACTION_ACTION_SAVECOO)

			<button type="reset" class="btn btn-default btn-frmt btn-sm" data-dismiss="modal">
				<i class="fa fa-times"></i>Cancel
			</button>
		</div>
	</div>
</div>

